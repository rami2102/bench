FROM node:24-bookworm

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       bash \
       ca-certificates \
       coreutils \
       curl \
       findutils \
       git \
       grep \
       jq \
       python3 \
       python3-pip \
       python3-venv \
       sed \
       tini \
    && rm -rf /var/lib/apt/lists/*

# Python packages for SWE-bench (datasets for downloading, swebench for harness)
RUN pip3 install --break-system-packages datasets swebench

# Agent CLIs used by this benchmark
RUN npm install -g \
      @openai/codex \
      @google/gemini-cli \
      @mariozechner/pi-coding-agent \
      @anthropic-ai/claude-code

WORKDIR /workspace

ENTRYPOINT ["/usr/bin/tini", "--"]
CMD ["bash"]
